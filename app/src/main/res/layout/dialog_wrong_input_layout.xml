<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@drawable/dialog_wrong_input_bg"
                android:layout_width="match_parent"
                android:layout_height="250dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp">

        <com.msl.talfinalproject.ui.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4C545A"
                app:font_style="open_sans_hebrew_regular"
                android:text="Error"
                android:textSize="34dp"
                android:layout_gravity="center_horizontal"/>

        <com.msl.talfinalproject.ui.FontableTextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4C545A"
                android:layout_marginTop="5dp"
                app:font_style="open_sans_hebrew_light"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"/>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/button_dismiss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dialog_wrong_input_button">

        <com.msl.talfinalproject.ui.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="OK"
                android:layout_centerInParent="true"
                app:font_style="open_sans_hebrew_regular"/>

    </RelativeLayout>

</RelativeLayout>